{
  "manifest_version": 3,
  "name": "OpenAI Edge TTS Extension",
  "version": "1.0.0",
  "description": "Browser extension for OpenAI Edge TTS API",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:5050/*",
    "http://127.0.0.1:5050/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}